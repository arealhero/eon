// EBNF

program = statement* EOF

statement = expression_statement

declaration = identifier ':' type '=' '{' declaration_body '}'

function_declaration = identifier ':' function_type '=' '{' statement* '}'
type_declaration = identifier ':' 'struct' '=' '{' type_declaration_body '}'

// TODO(vlad): Add optional assignment.
type_declaration_body = (identifier ':' type ';')+

enum_declaration = ...

identifier = (letter | '_') (letter | digit | '_')*

letter = [a-zA-Z]
digit = [0-9]
